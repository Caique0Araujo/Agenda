<div class="main-container">
    <div class="sub-container">
        <h1>Eventos</h1>
        <div class="models-container">
            {{#each events}}
                <div>
                    <p><span class="bold"><a href="/events/event/{{this.id}}" id="name-link">{{this.name}}</a></span></p>
                    <p>Descrição: {{this.description}}</p>
                    <p>Data: {{this.eventDate}}</p>
                    <p>Contatos: 
                        {{#each this.Contacts}}
                            <span>
                                {{this.name}},
                            </span>
                        {{/each}}
                    </p>
                </div>
            {{/each}}
        </div>
        <div class="bttn-links">
            <a id="bttn-contact" href="/events/add">Adicionar eventos</a>
        </div>
    </div>
</div>
