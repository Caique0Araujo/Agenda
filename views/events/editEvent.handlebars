<div class="container">
    <h1 class= "container-title" >Editar eventos</h1>
    <form action="/events/editevent" method="post" class="form-add">
        <input type="hidden" name="id" id="id" value="{{event.id}}">
        <div class="container-fields">
            <label for="name">Nome*: </label>
            <input class="textfields" type="text" id="name" name="name" required value="{{event.name}}">
        </div>
        <div class="container-fields">
            <label for="description">Descrição: </label>
            <input class="textfields" type="text" id="description" name="description" required value="{{event.description}}">
        </div>
        <div class="container-bttns">
            <input class="bttn-submit" type="submit" value="Confirmar">
        </div>
    </form>
</div>