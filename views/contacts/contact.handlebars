<div class="container-father">
    <div class="container">
            <h1>{{contact.name}}</h1>
            <div class="models-container">
                <div>
                    <p>Telefone: {{contact.fone}} - Email: {{contact.email}}</p>
                </div>
            </div>
            <div class="bttn-links">
                <a id="bttn-contact" href="/contacts/edit/{{contact.id}}">Editar contato</a>
                <form action="/contacts/delete" method="post">
                    <input type="hidden" name="id" value="{{contact.id}}">
                    <input type="submit" value="Deletar contato" id="bttn-contact">
                </form>
            </div>
    </div>
</div>