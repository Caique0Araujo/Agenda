   <script>
       window.onload = function() {
        if(! window. location. hash) {
            window. location = window. location + '#loaded';
            window. location. reload();
        }
       }
   </script>
    <div class="sub-container">
        <h1>Contatos</h1>
        <div class="models-container">
            {{#each contacts}}
                <div>
                    <p><span class="bold"><a href="/contacts/contact/{{this.id}}" id="name-link">{{this.name}}</a></span> - Telefone: {{this.fone}} - Email: {{this.email}}</p>
                </div>
            {{/each}}
        </div>
        <div class="bttn-links">
            <a id="bttn-contact" href="/contacts/add">Adicionar contatos</a>
        </div>
    </div>

