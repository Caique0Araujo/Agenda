    <div class="container">
        <h1 class= "container-title" >Registrar</h1>
        <form action="/users/register" method="post" class="form-add">
            <div class="container-fields">
                <label for="name">Nome*: </label>
                <input class="textfields" type="name" id="name" name="name" required>
            </div>
            <div class="container-fields">
                <label for="fone">Telefone: </label>
                <input class="textfields" type="number" id="fone" name="fone" required>
            </div>
            <div class="container-fields">
                <label for="email">E-mail*: </label>
                <input class="textfields" type="email" id="email" name="email">
            </div>
            <div class="container-fields">
                <label for="password">Senha*: </label>
                <input class="textfields" type="password" id="password" name="password">
            </div>
            <div class="container-fields">
                <label for="confirmPassord">Confirmar senha*: </label>
                <input class="textfields" type="password" id="confirmPassord" name="confirmPassord">
            </div>
            <div class="container-fields">
                <p>
                    Já possui cadastro? <a class="redirect-link"href="/users/login">Faça o login</a>
                </p>
            </div>
            <div class="container-bttns">
                <input class="bttn-submit" type="submit" value="Confirmar">
            </div>
        </form>      
    </div>