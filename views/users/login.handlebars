<div class="container">
    <h1 class="container-title">Login</h1>
    <form action="/users/login" method="post" class="form-add">
        <div class="container-fields">
            <label for="email">E-mail*: </label>
            <input class="textfields" type="email" id="email" name="email">
        </div>
        <div class="container-fields">
            <label for="password">Senha*: </label>
            <input class="textfields" type="password" id="password" name="password">
        </div>
        <div class="container-fields">
            <span>Não possui cadastro? <a class="redirect-link" href="/users/register">Faça o registro</a>
            </span>
                
        </div>
        <div class="container-bttns">
            <input class="bttn-submit" type="submit" value="Confirmar">
        </div>
    </form>
</div>